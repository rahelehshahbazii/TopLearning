@model TopLearn.DataLayer.Entities.Order.Order
@inject TopLearn.Core.Services.Interfaces.IUserService _userService
@using TopLearn.Core.Services.Interfaces
@{
    ViewData["Title"] = "ShowOrder";
    int ordersum = Model.OrderSum;
    string discounttype = ViewBag.typediscount;
 
}

<div class="container">
    <nav aria-label="breadcrumb">
        <ul class="breadcrumb">
            <li class="breadcrumb-item"><a href="/">تاپ لرن</a></li>
            <li class="breadcrumb-item active" aria-current="page">نمایش فاکتور</li>
        </ul>
    </nav>
</div>


<main>
    <div class="container">
        <div class="user-account">
            <div class="row">
                <partial name="_SideBar" />
                <div class="col-md-9 col-sm-8 col-xs-12">
                    <section class="user-account-content">
                        <header><h1>فاکتور شما</h1></header>
                        @if (ViewBag.finaly == true)
                        {
                            <div class="alert alert-success">
                                فاکتور با موفقیت پرداخت گردید
                            </div>
                        }
                        <table class="table table-bordered">
                            <thead>
                                <tr>
                                    <th>دوره</th>
                                    <th>تعداد</th>
                                    <th>قیمت</th>
                                    <th>جمع</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.OrderDetails)
                                {
                                    <tr>
                                        <td>
                                            <a href="/ShowCourse/@item.Course" target="_blank">@item.Course.CourseTitle</a>
                                        </td>
                                        <td>
                                            @item.Count
                                        </td>
                                        <td>
                                            @item.Price
                                        </td>
                                        <td>
                                            @((item.Count * item.Price).ToString("#,0"))
                                        </td>
                                    </tr>
                                }
                                @if (!Model.IsFinaly)
                                {
                                    <tr>
                                        <td colspan="3" class="text-left">کد تخفیف</td>
                                        <td>
                                            <form action="/UserPanel/MyOrders/UseDiscount" method="post">
                                                <input type="hidden" name="orderId" value="@Model.OrderId" />
                                                <input type="text" name="code" class="form-control" />
                                                <input type="submit" class="btn btn-primary btn-block" style="margin-top:5px" value="اعمال" />
                                            </form>
                                            @if (discounttype != "")
                                            {
                                                switch (discounttype)
                                                {
                                                    case "Success":
                                                        {
                                                            <div class="alert alert-success">
                                                                <p class="text-muted">کد با موفقیت ارسال شد</p>
                                                            </div>
                                                            break;
                                                        }
                                                    case "ExpireDate":
                                                        {
                                                            <div class="alert alert-danger">
                                                                <p class="text-muted">تاریخ کد به اتمام رسیده است</p>
                                                            </div>
                                                            break;
                                                        }
                                                    case "NotFound":
                                                        {
                                                            <div class="alert alert-warning">
                                                                <p class="text-muted">کد معتبر نیست</p>
                                                            </div>
                                                            break;
                                                        }
                                                    case "Finished":
                                                        {
                                                            <div class="alert alert-danger">
                                                                <p class="text-muted">کد به اتمام رسیده است</p>
                                                            </div>
                                                            break;

                                                        }
                                                    case "UserUsed":
                                                        {
                                                            <div class="alert alert-info">
                                                                <p class="text-muted">ابن کد قبلا توسط شما استفاده شده است</p>
                                                            </div>
                                                            break;
                                                        }
                                                }
                                            }
                                        </td>
                                    </tr>
                                }
                                <tr>
                                    <td colspan="3" class="text-left">جمع کل</td>
                                    <td>
                                        @ordersum
                                    </td>
                                </tr>

                                @if (!Model.IsFinaly)
                                                     {
                                    <tr>
                                        <td colspan="2" class="text-left"></td>
                                        <td colspan="2">
                                            @if (_userService.BalanceUserwallet(User.Identity.Name) >= ordersum)
                                            {
                                                <a class="btn btn-success btn-block" href="UserPanel/MyOrders/FinalyOrder/@Model.OrderId">تایید فاکتور</a>
                                            }
                                            else
                                            {
                                                <a class="btn btn-success btn-block" displayed>تایید فاکتور</a>
                                                <div class="alert alert-danger">
                                                    موجودی کیف شما کافی نمی باشد . لطفااز طریق
                                                    <a href="/UserPanel/Wallet" class="alert-link">لینک</a> اقدام به شارژ حساب کنید
                                                </div>
                                            }
                                        </td>
                                    </tr>
                                }

                            </tbody>
                        </table>
                    </section>
                </div>
            </div>
        </div>
    </div>
</main>
